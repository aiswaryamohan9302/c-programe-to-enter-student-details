#include <iostream>

using namespace std;

class student
{
    private :char name [20];
             int marks;
             int roll_no;
             
    public:void input();
           void display();
};

void student ::input()
{
     cout<<"enter the name";
     cin>>name;
     cout<<"enter the marks";
     cin>>marks;
     cout<<"enter the roll_no";
     cin>>roll_no;
}
void student ::display()
{
     cout<<"name:"<<name;
     cout<<"\nmarks:"<<marks;
     cout<<"\nroll_no:"<<roll_no;
}
int main()
{
    int i=1;
  student s[5];
  for(i=1;i<5;i++)
  {
  s[i].input();
  s[i].display();
  }
  
  return 0;
}


